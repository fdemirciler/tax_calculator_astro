<div class="results-section">
  <div class="result-card">
    <div class="result-item">
      <span class="label">Effective Tax Rate</span>
      <span class="value" id="taxRate" aria-live="polite">0%</span>
    </div>
    <div class="result-item">
      <span class="label">Tax Amount</span>
      <span class="value" id="taxAmount" aria-live="polite">€0,00</span>
    </div>
    <div class="result-item highlight">
      <span class="label">Net Income</span>
      <span class="value" id="netIncome" aria-live="polite">€0,00</span>
    </div>
  </div>
</div>

<style>
  .results-section {
    margin: var(--spacing-sm) 0;
  }

  .result-card {
    background: var(--color-gray-50);
    border-radius: var(--radius-lg);
    padding: var(--spacing-sm);
    border: 1px solid var(--color-gray-200);
  }

  .result-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-xs) 0;
  }

  .result-item:not(:last-child) {
    border-bottom: 1px solid var(--color-gray-200);
  }

  .result-item.highlight {
    background: white;
    margin: 0 calc(var(--spacing-sm) * -1);
    padding: var(--spacing-sm);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
  }

  .label {
    color: var(--color-gray-600);
    font-size: 0.75rem;
  }

  .value {
    font-weight: 600;
    color: var(--color-gray-900);
    font-size: 0.875rem;
  }

  .highlight .value {
    color: var(--color-primary);
    font-size: 1rem;
  }
</style>
